{
  "name": "v-monitor",
  "version": "0.0.1",
  "description": "Frontend monitoring system monorepo",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @monitor/server dev",
    "dev:server": "pnpm --filter @monitor/server dev",
    "dev:playground": "pnpm --filter playground dev",
    "dev:web": "pnpm --filter @monitor/web dev",
    "build": "pnpm -r build",
    "build:monitor": "pnpm --filter @monitor/sdk build",
    "build:playground": "pnpm --filter playground build",
    "build:server": "pnpm --filter @monitor/server build",
    "build:web": "pnpm --filter @monitor/web build",
    "clean": "pnpm -r clean",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "db:generate": "pnpm --filter @monitor/server db:generate",
    "db:migrate": "pnpm --filter @monitor/server db:migrate",
    "db:migrate:deploy": "pnpm --filter @monitor/server db:migrate:deploy",
    "db:studio": "pnpm --filter @monitor/server db:studio",
    "server:up": "pnpm --filter @monitor/server docker-compose up -d",
    "server:down": "pnpm --filter @monitor/server docker-compose down",
    "server:logs": "pnpm --filter @monitor/server docker-compose logs -f"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "~5.8.3",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "prettier": "^3.2.4"
  },
  "keywords": ["monitoring", "frontend", "error-tracking", "performance"],
  "author": "",
  "license": "MIT"
}
